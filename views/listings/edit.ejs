<%- layout("layouts/boilerplate") -%>
<body>
   <br><br>
   <h3>Edit Your Listing</h3>
   <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
      <div>
         <label for="title" class="form-label">Title:</label>
         <input type="text" id="title" value="<%= listing.title %>" name="title" class="form-conrol">
      </div>
      <br>
      <div class="mb-3">
         <label for="description" class="form-label">Description:</label>
         <textarea id="description" name="description" cols="30" rows="5" class="form-control"><%= listing.description %></textarea>
     </div>
      <br>
      <div>
         <label for="image" class="form-label">Image URL:</label>
         <input type="text" id="image" value="<%= listing.image %>" name="image" class="form-control">
      </div>
      <br>
      <div>
         <label for="location" class="form-label">Location:</label>
         <input type="text" id="location" value="<%= listing.location %>" name="location" class="form-control">
      </div>
      <br>
      <div>
         <label for="country" class="form-label">Country:</label>
         <input type="text" id="country" value="<%= listing.country %>" name="country" class="form-control">
      </div>
      <br>
      <button type="submit" class="btn btn-dark">Edit</button>
      <br><br>
   </form>
</body>
