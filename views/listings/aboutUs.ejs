<%- layout("layouts/boilerplate") -%>
<style>
    .team {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap; /* Allow team members to wrap onto multiple lines */
    }
  
    .team-member {
      flex-basis: calc(33.33% - 20px); /* Adjust the width of team members */
      margin-bottom: 20px;
      position: relative; /* Add relative positioning to contain the image */
    }
  
    .team-member img {
      max-width: 100%;
      height: auto;
      display: block;
      transition: transform 0.3s ease; /* Add transition for smooth animation */
    }
  
    /* Add animation on hover */
    .team-member:hover img {
      transform: scale(1.1); /* Scale up the image on hover */
    }
  
    @media (max-width: 768px) {
      .team-member {
        flex-basis: calc(50% - 20px); /* Change to two columns on smaller screens */
      }
    }
  
    @media (max-width: 576px) {
      .team-member {
        flex-basis: 100%; /* Single column on extra small screens */
      }
    }
  </style>
  
